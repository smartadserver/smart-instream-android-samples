<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartadserver.android.brightcoveplayersample.MainActivity">

    <!-- label to display instream SDK version-->
    <TextView
        android:id="@+id/sdk_version_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"/>

    <!-- content player container -->
    <FrameLayout
        android:id="@+id/content_player_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#000">
        <com.brightcove.player.view.BrightcoveExoPlayerVideoView
            android:id="@+id/brightcove_player"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

</RelativeLayout>
